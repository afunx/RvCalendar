<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="#ff0000"
        android:id="@+id/toolbar_rv_calendar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">

        <ImageView
            android:background="#0f00ff"
            android:id="@+id/img_rv_calendar"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_title_rv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_title_end_rv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:background="#00ff00"
        android:id="@+id/ll_week_rv_calendar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbar_rv_calendar"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:background="#ff00ff"
        android:id="@+id/tv_month_rv_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_week_rv_calendar"
        android:gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:background="#fff000"
        android:id="@+id/rv_day_rv_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_month_rv_calendar" />

</merge>
